        <div class="container">

            <form class="form-signin rounded-sm shadow" method="post">
                <div class="mx-auto" style="width:200px"><img class="mb-4 logo" src="~/Resources/codeclouds_colour.svg" alt=""></div>
                <!-- Nav tabs -->
                <ul class="nav nav-pills mb-4">
                    <li class="nav-item pill-1">
                        <a class="nav-link active rounded-0" data-toggle="tab" href="#login">Login</a>
                    </li>
                    <li class="nav-item pill-2">
                        <a class="nav-link  rounded-0" data-toggle="tab" href="#register">Register</a>
                    </li>
                </ul>
                <!-- Tab panes -->
                <div class="tab-content">
                    @Html.AntiForgeryToken()
                    <!-- Tab1 -->
                    <div id="login" class="container tab-pane active">

                        <label asp-for="Account.Email" for="email" class="sr-only">Email address</label>
                        <input asp-for="Account.Email" type="email" id="email" name="Account.Email" class="form-control mb-4" placeholder="Email address" value="@Model.Account.Email">

                        <label asp-for="Account.Password" for="password" class="sr-only">Password</label>
                        <input asp-for="Account.Password" type="password" id="password" name="Account.Password" class="form-control mb-4" placeholder="Password" value="@Model.Account.Password">

                        <button class="btn btn-lg btn-dark btn-block" type="submit">Login</button>
                    </div>
                    <!-- Tab2 -->
                    <div id="register" class="container tab-pane fade">
                        <label for="registerUserName" class="sr-only">User Name</label>
                        <input type="text" class="form-control mb-4" id="registerUserName" name="registerUserName" placeholder="Enter user name">

                        <label for="registerEmail" class="sr-only">Email address</label>
                        <input type="email" class="form-control mb-4" id="registerEmail" name="registerEmail" placeholder="Enter email">

                        <label for="registerPassword" class="sr-only">Password</label>
                        <input type="password" class="form-control mb-4" id="registerPassword" name="registerPassword" placeholder="Password">

                        <label for="confirmPassword" class="sr-only">Confirm Password</label>
                        <input type="password" class="form-control mb-4" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password">

                        <button class="btn btn-lg btn-dark btn-block" type="button" onclick="Register();">Register</button>
                    </div>
                </div>

            </form>
        </div>
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <script>
            function Login() {
                if ($('#email').val().trim() == '') {
                    alert("Please provide email ID!");
                    return;
                }
                if ($('#password').val().trim() == '') {
                    alert("Please provide password!");
                    return;
                }

                let account = JSON.stringify({
                    "UserName": '',
                    "Email": $('#email').val(),
                    "Password": $('#password').val(),
                    "ConfirmPassword": ''
                });

                $.ajax({
                    url: webApi + 'api/Login/AuthenticateUser',
                    method: "POST",
                    cache: false,
                    data: account,
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {
                        if (response.status == 200) {
                            alert(response.message);

                        }
                        else {
                            alert(response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        // Handle error here
                        console.error("Error:", xhr.responseText);
                    }
                });
            }

            function Register() {
                if ($('#registerUserName').val().trim() == '') {
                    alert("Please provide user name to register!");
                    return;
                }
                if ($('#registerEmail').val().trim() == '') {
                    alert("Please provide email ID to register!");
                    return;
                }
                if ($('#registerPassword').val().trim() == '') {
                    alert("Please provide password!");
                    return;
                }
                if ($('#confirmPassword').val().trim() == '') {
                    alert("Please provide confirm password!");
                    return;
                }

                let param = JSON.stringify({
                    "UserName": $('#registerUserName').val(),
                    "Email": $('#registerEmail').val(),
                    "Password": $('#registerPassword').val(),
                    "ConfirmPassword": $('#confirmPassword').val()
                });

                $.ajax({
                    url: webApi + 'api/Login/RegisterUser',
                    method: "POST",
                    cache: false,
                    data: param,
                    contentType: "application/json; charset=utf-8",
                    success: function (response) {
                        if (response.status == 200) {
                            alert(response.message);
                        }
                        else {
                            alert(response.message);
                        }

                    },
                    error: function (xhr, status, error) {
                        // Handle error here
                        console.error("Error:", xhr.responseText);
                        console.log(xhr, status, error);
                        alert(error);
                    }
                });
            }
        </script>
    </body>
