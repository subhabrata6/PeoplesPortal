@page
@using TestEmployeeApp.Model
@model TestEmployeeApp.Pages.Leave.EmployeeLeavesModel
@{
    ViewData["Title"] = "Employee Leave";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Leave</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <div class="container-fluid">
        <h2>Employee Leave</h2>

        <div>
            <form id="searchForm">
                <div class="form-row align-items-end">
                    <div class="form-group col-md-3">
                        <label for="employeeName">Employee Name:</label>
                        <input type="text" id="employeeName" name="employeeName" class="form-control autocomplete" />
                    </div>
                    <div class="form-group col-md-3">
                        <label for="leaveType">Leave Type:</label>
                        <select id="leaveType" name="leaveType" class="form-control">
                            <option value="0">Select Leave Type</option>
                            <option value="1">Full Day</option>
                            <option value="2">Half Day</option>
                            <option value="3">Early Leave</option>
                            <option value="4">Paternity Leave</option>
                            <option value="5">Maternity Leave</option>
                            <option value="6">Marriage Leave</option>
                            <option value="7">Comp Off</option>
                        </select>
                    </div>
                    <div class="form-group col-md-3">
                        <button type="button" id="searchButton" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </form>
        </div>

        <div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Leave From</th>
                        <th>Leave To</th>
                        <th>Leave Type</th>
                        <th>Applicant</th>
                        <th>Reason</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (LeaveModule item in Model.LeaveList)
                    {
                        <tr>
                            <td>@item.FromDate</td>
                            <td>@item.ToDate</td>
                            <td>@item.LeaveTypeName</td>
                            <td>@item.CreatedBy</td>
                            <td>@item.Reason</td>
                            <td>@item.Status</td>
                            <td>
                                <!-- Delete Button -->
                                <a href="javascript:void(0)" class="btn btn-danger" onclick="deleteEntry('@item.Id')">
                                    <i class="fas fa-trash"></i>
                                </a>
                                <!-- Edit Button -->
                                <a href="javascript:void(0)" class="btn btn-primary" onclick="editEntry('@item.Id')">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    }
</body>
</html>
