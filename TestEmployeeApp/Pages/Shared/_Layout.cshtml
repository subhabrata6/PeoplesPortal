
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - People's Portal App</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TestEmployeeApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">People's Portal</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark roleDropdown" href="#" id="rolesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    User Management
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="rolesDropdown">
                                    <li><a class="dropdown-item userList" asp-area="" asp-page="/RoleCreation/UserList">User List</a></li>
                                    <li><a class="dropdown-item userRole" asp-area="" asp-page="/RoleCreation/UserRoles">User Roles</a></li>
                                    <li><a class="dropdown-item assignRole" asp-area="" asp-page="/RoleCreation/AssignRoles">Assign Roles</a></li>
                                </ul>
                            </li>
                        }
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark peopleDropdown" href="#" id="rolesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                People Management
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="peopleDropdown">
                                <a class="nav-link text-dark people" asp-area="" asp-page="/Peoples/People">People</a>
                                <a class="nav-link text-dark country" asp-area="" asp-page="/Countries/Country">Country</a>
                                <a class="nav-link text-dark state" asp-area="" asp-page="/States/State">State</a>
                            </ul>
                            
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark ottDropdown" href="#" id="rolesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                OTT Management
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="ottDropdown">
                                <a class="nav-link text-dark people" asp-area="" asp-page="/OTTPlatform/OTTList">OTT</a>
                                <a class="nav-link text-dark country" asp-area="" asp-page="/OTTPlatform/SubscriptionList">OTT Plans</a>
                                <a class="nav-link text-dark state" asp-area="" asp-page="/OTTPlatform/OTTUsers">OTT User List</a>
                            </ul>
                        </li>
                        <li class="nav-item">
                            
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark leaveDropDown" href="#" id="leavesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Leave Management
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="leavesDropdown">
                                <li><a class="dropdown-item leaveHistory" asp-area="" asp-page="/Leave/EmployeeLeaves">Leave History</a></li>
                                <li><a class="dropdown-item applyLeave" asp-area="" asp-page="/Leave/ApplyLeave">Apply Leave</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown">

                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-user-circle"></i> <!-- Font Awesome icon for user -->
                                 <!-- Replace [Current User] with the actual username -->
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <span class="ml-2">Welcome, @User.Identity.Name </span>
                                }
                                else
                                {
                                    <li><a href="/Account/Login">Login</a></li>
                                }
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="" asp-page="/Account/Login">Logout</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - People's Portal - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
