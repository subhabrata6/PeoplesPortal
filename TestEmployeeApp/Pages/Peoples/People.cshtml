@page
@using TestEmployeeApp.Model
@model TestEmployeeApp.Pages.Peoples.PeopleModel
@{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>List Of People</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f4f4f4;
                padding-top: 20px;
            }

            .form-header {
                border: 1px solid #ccc;
                padding: 20px;
                border-radius: 8px;
            }

            .form-row {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 15px;
            }

            .form-group {
                flex-grow: 1;
                margin-right: 10px;
                margin-bottom: 10px;
            }

            .table {
                border: 1px solid #ccc;
                border-collapse: collapse;
                width: 100%;
            }

                .table th, .table td {
                    border: 1px solid #ccc;
                    padding: 8px;
                }

                .table th {
                    background-color: #f2f2f2;
                }
        </style>
    </head>
    <body>
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <h1 class="mb-4 text-center">List Of People</h1>

                    <div class="form-header">
                        <form method="post">
                            <div class="form-row">
                                <div class="form-group">
                                    <input type="hidden" id="id" name="NewPeople.id" value="@Model.NewPeople.id" />
                                    <label>Name</label>
                                    <input type="text" id="name" name="NewPeople.name" class="form-control" placeholder="Enter Person Name" value="@Model.NewPeople.name" />
                                </div>
                                <div class="form-group">
                                    <label>Age</label>
                                    <input type="number" id="age" name="NewPeople.age" class="form-control" placeholder="Enter Person Age" value="@Model.NewPeople.age" />
                                </div>
                                <div class="form-group">
                                    <label>Country</label>
                                    <select asp-for="SelectedCountry" class="form-control" onchange="GetStateByCountry();">
                                        <option value="0">Select Country</option>
                                        @foreach (Country item in Model.Countries)
                                        {
                                            <option value="@item.id">@item.countryName</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>State</label>
                                    <select class="form-control">
                                        <option value="0">Select State</option>
                                        @foreach (State item in Model.States)
                                        {
                                            <option value="@item.id">@item.state</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Description</label>
                                    <input type="text" id="description" name="NewPeople.description" class="form-control" placeholder="Enter Person Description" value="@Model.NewPeople.description" />
                                </div>
                                <div class="form-group float-lg-end">
                                    <button type="submit" class="btn btn-primary">Add Person</button>
                                </div>
                            </div>
                        </form>
                    </div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Age</th>
                                <th scope="col">Description</th>
                                <th scope="col">Country</th>
                                <th scope="col">State</th>
                                <th scope="col">Created On</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (People item in Model.People)
                            {
                                <tr>
                                    <td>@item.name</td>
                                    <td>@item.age</td>
                                    <td>@item.description</td>
                                    <td>@item.country</td>
                                    <td>@item.state</td>
                                    <td>@item.createdOn</td>
                                    <td>
                                        <!-- Delete Button -->
                                        <a href="#" class="btn btn-danger" onclick="deleteEntry('@item.id')">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                        <!-- Edit Button -->
                                        <a href="#" class="btn btn-primary" onclick="editEntry('@item.id')">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Warning HTML -->
        <div id="customAlert" class="alert alert-warning alert-dismissible fade show" role="alert" style="display: none;">
            <!-- Alert message content -->
            Are you sure you want to delete this ?
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>

        <!-- Confirm HTML -->
        <div id="customConfirm" class="custom-confirm">
            <div class="custom-confirm-content">
                <p id="confirmMessage">Are you sure you want to perform this action?</p>
                <div class="buttons">
                    <button id="confirmButton">Confirm</button>
                    <button id="cancelButton">Cancel</button>
                </div>
            </div>
        </div>


        <script>
            // JavaScript to display the custom alert
            function displayCustomAlert() {
                document.getElementById("customAlert").style.display = "block";
            }
        </script>
    </body>

    </html>



}
