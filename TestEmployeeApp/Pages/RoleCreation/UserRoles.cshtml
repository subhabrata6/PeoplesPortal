@page
@model TestEmployeeApp.Pages.RoleCreation.UserRolesModel
@{
    ViewData["Title"] = "User Role";

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>@ViewData["Title"]</title>

    </head>
    
    <body>

        <style>
            .add-role-btn {
                float: inline-end;
            }

            .modal-close {
                margin-right: 20px !important;
            }
        </style>


        <!-- Page content -->
        <div id="page-content-wrapper">
            <div class="page-content">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <div class="header-icon">
                        <i class="fa fa-tachometer"></i>
                    </div>
                    <div class="header-title">
                        <h1> User Role</h1>
                        <ul class="link hidden-xs">
                            <li><a asp-area="" asp-page="/Index"><i class="fa fa-home"></i>Home</a></li>
                            <li><a asp-area="" asp-page="/RoleCreation/UserRoles">User Role</a></li>
                        </ul>
                    </div>
                </section>
                <!-- page section -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <a class="waves-effect waves-light btn m-b-10 add-role-btn" href="#fadeIn" data-target="#fadeIn" data-toggle="modal"><i class="material-icons left">add_to_photos</i>Add Role</a>
                            <br><br><br>
                            <div class="card">
                                <div class="card-content">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-hover">
                                            <thead>
                                                <tr>
                                                    <th scope="col" class="col-md-8">Role Name </th>
                                                    <th scope="col" class="col-md-4">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td>Naeem Khan</td>
                                                    <td>
                                                        <button class="btn btn-sm" data-toggle="tooltip" data-placement="left" title="Update"><i class="fa fa-pencil" aria-hidden="true"></i></button>
                                                        <button class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="right" title="Delete "><i class="fa fa-trash-o" aria-hidden="true"></i></button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ./row -->
                </div>
                <!-- ./cotainer -->
            </div>
            <!-- ./page-content -->
        </div>
        <!-- ./page-content-wrapper -->

        <script>

            function saveRole() {
                const roleName = $('#roleName').val().trim();
                if (roleName) {
                    let role = JSON.stringify({ "Id": $('#roleId').val() === '' ? 0 : Number($('#roleId').val()), "Name": roleName, "IsAdmin": $('#isAdmin').is(':checked') });

                    $.ajax({
                        url: webApi + 'api/UserRole/SaveRole',
                        method: "POST",
                        cache: false,
                        data: role,
                        contentType: "application/json; charset=utf-8",
                        success: function (response) {
                            if (response.status === 200) {
                                alert(response.message);
                                window.location.reload();
                            } else {
                                alert(response.message);
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error("Error:", xhr.responseText);
                            alert(error);
                        }
                    });

                    $('#addRoleModal').modal('toggle');
                }
                else {
                    alert('Role name cannot be empty');
                }
            }


            function editEntry(id) {
                console.log("Editing entry with ID: " + id);

                $.ajax({
                    url: webApi + "api/UserRole/EditRole/" + id,
                    method: "GET",
                    cache: false,
                    contentType: "application/json",
                    success: function (response) {
                        console.log("Success:", response);
                        if (response.status === 200) {
                            $('#roleId').val(response.response.id);
                            $('#roleName').val(response.response.name);
                            $('#isAdmin').prop("checked", response.response.isAdmin);
                            $('#addRoleModal').modal('show');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Error:", xhr.responseText);
                    }
                });
            }

            function deleteEntry(id) {
                console.log("Deleting entry with ID: " + id);

                if (confirm("Are you sure you want to delete this?")) {
                    $.ajax({
                        url: webApi + "api/UserRole/DeleteUserRole/" + id,
                        method: "GET",
                        cache: false,
                        contentType: "application/json",
                        success: function (response) {
                            console.log("Success:", response);
                            if (response.status === 200) {
                                alert(response.message);
                                window.location.reload();
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error("Error:", xhr.responseText);
                        }
                    });
                }
            }
        </script>
    </body>
    </html>



}
